<%- include('header', { title: 'Dodaj przetarg' }) %>

<h1>Dodaj nowy przetarg</h1>

<form action="/tenders/add" method="POST">
  <label>Nazwa przedmiotu przetargu:</label>
  <input type="text" name="title" required>

  <label>Instytucja zamawiająca:</label>
  <input type="text" name="institution" required>

  <label>Opis przedmiotu przetargu:</label>
  <textarea name="description" required></textarea>

  <label>Data i godzina rozpoczęcia:</label>
  <input type="datetime-local" name="start" required>

  <label>Data i godzina zakończenia:</label>
  <input type="datetime-local" name="end" required>

  <label>Maksymalna wartość (PLN):</label>
  <input type="number" name="max_budget" min="0" required>

  <button type="submit">Dodaj przetarg</button>
</form>

<%- include('footer') %>

<script>
  const form = document.querySelector('form');
  const startInput = form.querySelector('input[name="start"]');
  const endInput = form.querySelector('input[name="end"]');

  startInput.addEventListener('change', () => {
    endInput.min = startInput.value;
  });
</script>